# ReaderAI Configuration Example
# Copy to .env and update with your values

# Application
APP_NAME=ReaderAI
VERSION=0.1.0

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_ENVIRONMENT=development
SERVER_DEBUG=true
SERVER_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# AWS
AWS_REGION=us-east-1
AWS_AUDIO_CACHE_BUCKET=readerai-audio-cache-dev
AWS_POLLY_VOICE_ID=Joanna
AWS_POLLY_ENGINE=standard
# AWS_PROFILE=your-profile-name
# AWS_ACCESS_KEY_ID=your-key-here
# AWS_SECRET_ACCESS_KEY=your-secret-here

# LLM
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
# LLM_API_KEY=your-api-key-here
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Audio Processing
AUDIO_CHUNK_TARGET_WORDS=400
AUDIO_CHUNK_MIN_WORDS=200
AUDIO_CHUNK_MAX_WORDS=800
AUDIO_FORMAT=mp3
AUDIO_SAMPLE_RATE=22050

# Database
DB_URL=sqlite:///./readerai.db
DB_ECHO=false
