# ReaderAI Configuration
# Copy to .env and customize

# === Application ===
APP_NAME=ReaderAI
VERSION=0.1.0

# === Server ===
SERVER_HOST=0.0.0.0                # Use 127.0.0.1 for local-only
SERVER_PORT=8000
SERVER_ENVIRONMENT=development     # development | staging | production
SERVER_DEBUG=true                  # Enables hot-reload
SERVER_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:5173"]

# === AWS ===
AWS_REGION=us-east-1
AWS_AUDIO_CACHE_BUCKET=readerai-audio-cache-dev

# Polly TTS settings
AWS_POLLY_VOICE_ID=Joanna         # Joanna, Matthew, Ivy (child), Justin (child)
AWS_POLLY_ENGINE=standard         # standard ($4/1M chars) | neural ($16/1M chars)

# Authentication (choose one method)
# AWS_PROFILE=default             # Use named AWS profile
# AWS_ACCESS_KEY_ID=AKIA...       # Or use explicit credentials
# AWS_SECRET_ACCESS_KEY=...

# === LLM ===
LLM_PROVIDER=google
LLM_MODEL=gemini-2.5-flash
# LLM_API_KEY=sk-...
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# === Audio Processing ===
AUDIO_CHUNK_TARGET_WORDS=400      # ~2-3 minutes per chunk
AUDIO_CHUNK_MIN_WORDS=200         # Don't create tiny chunks
AUDIO_CHUNK_MAX_WORDS=800         # Stay under Polly limits
AUDIO_FORMAT=mp3                  # mp3 | ogg_vorbis | pcm
AUDIO_SAMPLE_RATE=22050           # 16000 | 22050 | 24000

# === Database ===
DB_URL=sqlite:///./readerai.db    # SQLite for dev, postgres://... for prod
DB_ECHO=false                     # Log SQL queries (debug only)
